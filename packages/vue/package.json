{
  "name": "@ds/vue",
  "version": "2.0.0",
  "description": "SSR-friendly Vue components for the design system",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tailwind.css": {
      "default": "./src/tailwind.css"
    }
  },
  "files": [
    "dist",
    "src/tailwind.css"
  ],
  "scripts": {
    "build": "vue-tsc --declaration --emitDeclarationOnly && vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ds/tokens": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vue-tsc": "^3.1.5"
  },
  "peerDependencies": {
    "tailwindcss": ">=4.0.0",
    "vue": ">=3.4.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "keywords": [
    "vue",
    "design-system",
    "components",
    "tailwindcss",
    "ssr"
  ]
}
