{
  "name": "@ds/react",
  "version": "2.0.0",
  "description": "SSR-friendly React components for the design system",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tailwind.css": {
      "default": "./src/tailwind.css"
    }
  },
  "files": [
    "dist",
    "src/tailwind.css"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ds/tokens": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "keywords": [
    "react",
    "design-system",
    "components",
    "tailwindcss",
    "ssr"
  ],
  "nx": {
    "targets": {
      "build": {
        "inputs": [
          "{projectRoot}/src/**/*",
          "{projectRoot}/tsconfig.json"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  }
}
