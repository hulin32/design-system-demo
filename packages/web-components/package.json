{
  "name": "@ds/web-components",
  "version": "1.0.0",
  "description": "Lit-based web components for the design system",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/button/index.js",
      "types": "./dist/button/index.d.ts"
    },
    "./input": {
      "import": "./dist/input/index.js",
      "types": "./dist/input/index.d.ts"
    },
    "./card": {
      "import": "./dist/card/index.js",
      "types": "./dist/card/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "lit": "^3.1.2",
    "@ds/tokens": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "keywords": [
    "web-components",
    "lit",
    "design-system"
  ],
  "customElements": "dist/custom-elements.json"
}

